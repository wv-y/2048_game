<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8FEFE"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <!--//得分显示窗口-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:radius="20dp"
                android:text="2048"
                android:textColor="#ffffff"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/score_bg"
                android:gravity="center_vertical"
                android:text="当前分数\n0"
                android:textAlignment="center"
                android:textColor="@color/score_bg"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/best_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/score_bg"
                android:gravity="center_vertical"
                android:text="最高分数\n2048"
                android:textAlignment="center"
                android:textColor="@color/best_score_bg"
                android:textSize="28sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <Button
                android:id="@+id/start_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/but_bg"
                android:layout_gravity="center"
                android:text="开始游戏"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnlayout"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn00"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/block_init"
                    android:clickable="false"

                    />

                <TextView
                    android:id="@+id/btn01"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn02"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn03"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn10"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn11"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn12"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn13"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn20"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn21"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn22"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn23"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn30"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn31"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn32"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/btn33"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/block_init"
                    android:gravity="center"
                    android:clickable="false" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/game_over"
            android:textSize="25sp"
            android:textColor="@color/score_bg"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>